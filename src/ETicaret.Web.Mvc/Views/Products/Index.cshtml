@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/Products/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/Products/Index.min.js" asp-append-version="true"></script>
    </environment>
}


<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">

                        <div class="row">
                            <div class="col-sm-6">
                                <h4>@L("Products")</h4>
                            </div>
                            <div class="col-sm-6">
                                <a href="javascript:;" id="createButton" class="btn bg-blue float-sm-right">
                                    <i class="fa fa-plus-square"></i>
                                    @L("Create")
                                </a>
                            </div>

                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="ProductsTable" class="table table-striped table-bordered" style="width: 100%;">
                                <thead>
                                    <tr>
                                        <th style="width: 30%;">@L("ProductName")</th>
                                        <th style="width: 20%;">@L("Category")</th>
                                        <th style="width: 20%;">@L("Description")</th>
                                        <th style="width: 15%;">@L("Price")</th>
                                        <th style="width: 15%;">@L("StockQuantity")</th>
                                        <th style="width: 20%;">@L("Actions")</th>
                                    </tr>
                                    <tr>
                                        <th>
                                            <input type="text" name="ProductName" class="form-control datatable-filter" />
                                        </th>
                                        <th>
                                            <input type="text" name="CategoryName" class="form-control datatable-filter" />
                                        </th>
                                        <th>
                                            <input type="text" name="Description" class="form-control datatable-filter" />
                                        </th>
                                        <th>
                                            <input type="text" name="Price" class="form-control datatable-filter" />
                                        </th>
                                        <th>
                                            <input type="text" name="StockQuantity" class="form-control datatable-filter" />
                                        </th>
                                        <th>
                                            <div class="input-group-prepend">
                                                <button type="button" id="searchButton" class="btn bg-blue btn-search mr-2">
                                                    <span class="fas fa-search" aria-hidden="true"></span>
                                                </button>
                                                <button type="button" id="clearButton" class="btn bg-danger btn-search">
                                                    <span class="fas fa-times" aria-hidden="true"></span>
                                                </button>
                                            </div>
                                        </th>
                                    </tr>
                                </thead> 
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
 