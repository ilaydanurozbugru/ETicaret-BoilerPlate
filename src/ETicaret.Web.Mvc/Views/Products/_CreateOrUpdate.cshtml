@using ETicaret.Products.Dto
@using ETicaret.Web.Models.Common.Modals
@model ProductDto
@{
    Layout = null;
}

<div class="modal-content">
    @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("Create")))
    <form name="MainForm" role="form" class="form-horizontal">
        @Html.HiddenFor(x=>x.Id)
        <div class="modal-body">
            <div class="form-group row required">
                <label class="col-md-3 col-form-label" for="ProductName">@L("Name")</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control", required = "required", maxlength = "150", minlength = "2" })
                 
                </div>
            </div>
             <div class="form-group row required">
                <label class="col-md-3 col-form-label" for="ProductName">@L("Category")</label>
                <div class="col-md-9">
                    @Html.DropDownListFor(x => x.CategoryId,new SelectList(Model.CategoryList,"Id","Name"), new { @class = "form-control", required = "required" })
                 
                </div>
            </div>
            
            <div class="form-group row required">
                <label class="col-md-3 col-form-label" for="Price">@L("Price")</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(x => x.Price, new { @class = "form-control", required = "required", maxlength = "150", minlength = "2" })

                </div>
            </div>
            <div class="form-group row required">
                <label class="col-md-3 col-form-label" for="StockQuantity">@L("StockQuantity")</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(x => x.StockQuantity, new { @class = "form-control", required = "required", maxlength = "150", minlength = "2" })

                </div>
            </div>
            <div class="form-group row required">
                <label class="col-md-3 col-form-label" for="Description">@L("Description")</label>
                <div class="col-md-9">
                    @Html.TextAreaFor(x => x.Description, new { @class = "form-control", required = "required", maxlength = "150", minlength = "2" })

                </div>
            </div>
           
        </div>
        @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
    </form>
</div>
