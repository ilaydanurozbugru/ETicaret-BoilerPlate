@using ETicaret.Web.Models.Products
@using ETicaret.Web.Models.Common.Modals
@model EditProductModalViewModel
@{
    Layout = null;
}
@await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditProduct")))
<form name="ProductEditForm" role="form" class="form-horizontal">
    <input type="hidden" name="Id" value="@Model.Product.Id" />
    <div class="modal-body">
        <div class="form-group row required">
            <label class="col-md-3 col-form-label" for="productname">@L("ProductName")</label>
            <div class="col-md-9">
                <input id="productname" class="form-control" type="text" name="ProductName" value="@Model.Product.ProductName" required maxlength="256">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-3 col-form-label" for="description">@L("Description")</label>
            <div class="col-md-9">
                <textarea id="description" class="form-control" name="Description">@Model.Product.Description</textarea>
            </div>
        </div>
        <div class="form-group row required">
            <label class="col-md-3 col-form-label" for="price">@L("Price")</label>
            <div class="col-md-9">
                <input id="price" type="number" class="form-control" name="Price" value="@Model.Product.Price" required step="0.01" min="0">
            </div>
        </div>
        <div class="form-group row required">
            <label class="col-md-3 col-form-label" for="stockquantity">@L("StockQuantity")</label>
            <div class="col-md-9">
                <input id="stockquantity" type="number" class="form-control" name="StockQuantity" value="@Model.Product.StockQuantity" required min="0">
            </div>
        </div>
    </div>
    @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
</form>

<script src="~/view-resources/Views/Products/_EditModal.js" asp-append-version="true"></script>